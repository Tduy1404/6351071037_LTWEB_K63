@model BOOK.Models.SACH

@{
    ViewBag.Title = "SuaSach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Điều CHỉnh Thông Tin Khách</h2>

@using (Html.BeginForm("SuaSach", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{ @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Masach)

    <div class="form-group">
        <p style="width:200px">Mã Sách</p>
        <div class="col-md-10">
            <div>@Model.Masach</div>
        </div>
    </div>
    <div class="form-group">
        <p style="width:200px">Tên Sách</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p style="width:200px">Giá Bán</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p style="width:200px">Mô Tả</p>       
        <div class="col-md-10">
            <textarea name="Mota" style="width:954px; height350px;">Mô tả thông tin sách</textarea>
        </div>
    </div>

    <div class="form-group">
        <p style="width:200px">Ảnh Bìa</p>        
        <div class="col-md-10">
            <input type="file" name="fileupload" />
            <img src="~/Content/Hinhsanpham/@Model.Anhbia" width="305px" , height="200px" />(Ảnh hiện tại)
            @ViewBag.Thongbao
        </div>
    </div>

    <div class="form-group">
        <p style="width:200px">Ngày Cập Nhật</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ngaycapnhat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p style="width:200px">Số lượng Tồn</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p style="width:200px">Mã Nhà Cung Cấp</p>
        <div class="col-md-10">
            @Html.DropDownList("MaCD")
        </div>
    </div>

    <div class="form-group">
        <p style="width:200px">Mã Nhà Sản Xuất</p>
        <div class="col-md-10">
            @Html.DropDownList("MaNXB")
        </div>
    </div>

    <div class="form-group" style="margin-top:20px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default"  style="width:95px; height:37px"/>
        </div>
    </div>
</div>
}
