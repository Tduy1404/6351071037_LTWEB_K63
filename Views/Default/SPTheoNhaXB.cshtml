
@{
    ViewBag.Title = "SPTheoNhaXB";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<h2>Sách Nhà Xuất Bản</h2>


<div id="templatemo_content_right">
    <ul>
        @foreach (var sach in Model)
        {
            <li>
                <div class="templatemo_product_box"  style="width:280px; height:300px">
                    <h1>@sach.Tensach</h1>
                    <img style=" width:100px; height:130px"  alt="@sach.Tensach" src="~/Content/Hinhsanpham/@sach.Anhbia" />
                    <div class="product_info">
                        <p>Etiam luctus. Quisque facilisis suscipit elit. Curabitur...</p>
                        <h3>$55</h3>
                        <a href="@Url.Action("Details", "Default", new { id = sach.Masach })">View Details</a>
                    </div>
                    <div class="cleaner"></div>
                </div>

            </li>

        }

    </ul>

</div>

